<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
    <Dialog id="dialogId" title="Update Details">
        <content>
            <form:SimpleForm>
                <form:content>
                    <Label text="Order ID"/>
                    <Input editable="false" value="{PayloadModel>/Payload/OrderID}"/>
                    <Label text="Ship Name"/>
                    <Input editable="true" value="{PayloadModel>/Payload/ShipName}"/>
                    <Label text="Ship Address"/>
                    <Input editable="true" value="{PayloadModel>/Payload/ShipAddress}"/>
                    <Label text="Ship Region"/>
                    <Input editable="true" value="{PayloadModel>/Payload/ShipRegion}"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" press="onSaveRecord"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelRecord"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>