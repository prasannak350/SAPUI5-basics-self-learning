<mvc:View controllerName="sap.com.dateformatting.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table items="{ProductModel>/ProductCollection}">
                <columns>
                    <Column>
                        <Text text="Product Id"/>
                        <!-- <footer>
                            <Text text="Product Id Info"/>
                        </footer> -->
                    </Column>
                    <Column >
                        <Text text="Product Name"/>
                    </Column>
                    <Column >
                        <Text text="Supplier Name"/>
                    </Column>
                    <Column >
                        <Text text="Date of Sale"/>
                    </Column>
                    <Column >
                        <Text text="Quantity"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <cells>
                            <Text text="{ProductModel>productId}"/>
                            <Text text="{ProductModel>ProductName}"/>
                            <Text text="{ProductModel>SupplierName}"/>
                            <Text text="{path: 'ProductModel>DateofSale', formatter: '.customFormatter.formatDateSale'}"/>
                            <Text text="{ProductModel>Quantity}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
